<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bottom_gray_border"
    android:paddingStart="10dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/item_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_bookmark"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_menu_icon"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        tools:text="My Lists"/>

    <ImageView
        android:id="@+id/item_menu_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        tools:src="@drawable/ic_arrow_forward"
        android:contentDescription="@string/icon_arrow_forward_description" />

</androidx.constraintlayout.widget.ConstraintLayout>